<html>
    <head>
        <title> <%= title %> </title>
        <link rel="stylesheet" href="/index.css">
        <script type="module" defer>
            import { parallaxBg } from "/modules/parallaxBg.js";
            parallaxBg();
        </script>
    </head>
    <body>
        <div id="parallax-bg"></div>
        <div class="title-card">
            <h1> <%= title %> </h1>
            <a href="./new">
                <button class="add-message-button">+</button>
            </a>
        </div>

        <div class="messages-container">
            <% messages.forEach((message, index) => { %>
                <a href="./open/<%= message.id %>" class="message-box">
                    <p><%= message.text %></p>
                    <p><b><%= message.username %></b></p>
                </a>
            <% }) %> 
        </div>
    </body>
</html>